// This is your Prisma schema file,
// learn more about it in the docs  https //pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id  Int    @default(autoincrement())
  userId  String @id
  email String @unique
  userName  String
  userImage  String
  posts Post[]
  comments Comment[]
  createdAt DateTime @default(now())
}

model Post {
  id  Int    @default(autoincrement())
  postId String @id
  type String
  thumbnail String
  title String
  description String?
  content String

  info PostInfo?

  userId String
  user User  @relation(fields: [postId], references: [userId])

  comments Comment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

model PostInfo {
  id  Int    @default(autoincrement())
  like Int @default(0)
  shareCount Int @default(0)
  participages String[]
  participageCount Int @default(0)

  postId String @id
  post Post @relation(fields: [postId], references: [postId])
}

model Comment {
  id  Int    @default(autoincrement())
  commentId String @id
  text String
  like Int

  postId String
  post Post @relation(fields: [commentId], references: [postId])

  userId String
  user User  @relation(fields: [postId], references: [userId])

  createdAt DateTime @default(now())
}
