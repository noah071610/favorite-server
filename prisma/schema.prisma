// This is your Prisma schema file,
// learn more about it in the docs  https //pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  userId  Int  @id @default(autoincrement())
  email String @unique
  password String?
  provider String
  userName  String
  color String
  userImage  String

  saves Save[]
  posts Post[]
  comments Comment[]
  liked LikePost[]
  createdAt DateTime @default(now())
}


model Save {
  id Int @default(autoincrement())
  postId String @id
  type String
  format String  @default("default")
  thumbnail String
  title String 
  description String
  popular Int @default(0)
  count Int @default(0)
  lang String
  
  content String

  userId Int
  user User  @relation(fields: [userId], references: [userId])

  post Post?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Post {
  id Int @default(autoincrement())
  postId String @id
  type String
  format String  @default("default")
  thumbnail String
  title String 
  description String
  popular Int @default(0)
  count Int @default(0)
  lang String
  
  content String


  userId Int
  user User  @relation(fields: [userId], references: [userId])

  save Save  @relation(fields: [postId], references: [postId])

  comments Comment[]
  
  createdAt DateTime @default(now())
  lastPlayedAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([title], name: "title_fulltext_idx")
  @@index([description], name: "description_fulltext_idx")
}

model Comment {
  commentId  Int  @id  @default(autoincrement())
  text String

  postId String
  post Post @relation(fields: [postId], references: [postId])

  userId Int
  user User  @relation(fields: [userId], references: [userId])

  createdAt DateTime @default(now())
}

model HomepageData {
  id Int @unique @default(autoincrement())
  lang String
  name String
  data String
  rawData String
}


model LikePost {
  postId String @id

  userId Int
  user User @relation(fields: [userId], references: [userId])
}
