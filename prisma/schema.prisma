// learn more about it in the docs  https //pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  userId  Int  @id @default(autoincrement())
  email String @unique
  password String
  // token String
  userName  String
  userImage  String
  posts Post[]
  comments Comment[]
  createdAt DateTime @default(now())
}

model Post {
  postId String @id
  type String
  thumbnail String
  title String 
  description String?
  info Json
  content Json

  userId Int
  user User  @relation(fields: [userId], references: [userId])

  comments Comment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}


model Comment {
  commentId  Int  @id  @default(autoincrement())
  text String
  like Int

  postId String
  post Post @relation(fields: [postId], references: [postId])

  userId Int
  user User  @relation(fields: [userId], references: [userId])

  createdAt DateTime @default(now())
}
